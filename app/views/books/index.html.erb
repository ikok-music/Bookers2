<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user_id), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fa fa-user-cog fa-w-20"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="field">
            <%= f.label :title %></br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <%= f.label :body %></br>
            <%= f.text_area :body %>
          </div>
          <div class="actions">
            <%= f.submit 'Create Book' , class: 'btn btn-sm btn-success' %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thread>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>

